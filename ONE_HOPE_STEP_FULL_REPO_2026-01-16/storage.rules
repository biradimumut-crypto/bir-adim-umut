rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ========== HELPER FUNCTIONS ==========
    
    /// KullanÄ±cÄ± kimlik doÄŸrulamasÄ± kontrolÃ¼
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // ğŸš¨ P1-2 REV.2: App Check enforcement Firebase Console'dan yÃ¶netilir
    // Rules iÃ§inde claim kontrolÃ¼ YAPILMAZ (yanlÄ±ÅŸ API)
    // Console â†’ App Check â†’ Enforcement â†’ Storage â†’ Enforced
    
    /// Dosya boyutu kontrolÃ¼ (max 5MB)
    function isValidSize() {
      return request.resource.size < 5 * 1024 * 1024;
    }
    
    /// Dosya tÃ¼rÃ¼ kontrolÃ¼ (sadece resimler)
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // ========== PROFILE PHOTOS ==========
    
    match /profile_photos/{userId}.jpg {
      // Kendi profil fotoÄŸrafÄ±nÄ± okuyabilir
      allow read: if isAuthenticated();
      
      // Kendi profil fotoÄŸrafÄ±nÄ± yÃ¼kleyebilir/gÃ¼ncelleyebilir
      allow write: if isAuthenticated() 
                   && request.auth.uid == userId
                   && isValidSize()
                   && isImage();
    }
    
    // ========== TEAM LOGOS ==========
    // ğŸš¨ SECURITY FIX (SeÃ§enek A): Path-based yetkilendirme - kesin format
    // Path: team_logos/{teamId}/{uid}.jpg
    // KullanÄ±cÄ± SADECE kendi uid'si ile ve .jpg uzantÄ±sÄ±yla upload yapabilir
    // Uygulama tarafÄ±: sadece takÄ±m lideri upload butonunu gÃ¶rÃ¼r
    
    match /team_logos/{teamId}/{fileName} {
      // Herkes takÄ±m logosunu okuyabilir
      allow read: if isAuthenticated();
      
      // Yazma: Sadece kendi uid'si ile TAMEÅLEM (timestamp yok)
      // ğŸš¨ fileName == "abc123.jpg" formatÄ± zorunlu
      allow write: if isAuthenticated()
                   && fileName == (request.auth.uid + ".jpg")
                   && isValidSize()
                   && isImage();
    }
    
    // Eski path iÃ§in geriye uyumluluk (sadece okuma)
    match /team_logos/{teamId}.jpg {
      allow read: if isAuthenticated();
      allow write: if false;  // Eski path'e yazma kapalÄ±
    }
    
    // ========== CATCH ALL (GÃ¼venli VarsayÄ±lan) ==========
    
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
